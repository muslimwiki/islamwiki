{
    "name": "islamwiki/core",
    "description": "IslamWiki - A comprehensive Islamic knowledge base",
    "type": "project",
    "require": {
        "php": "^8.1",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.1",
        "psr/http-server-handler": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
